<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="qrcode" translate="label" sortOrder="10">
            <label>QRCODE</label>
        </tab>
        <section id="size" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>size</label>
            <tab>qrcode</tab>
            <resource>Egits_QrCode::qrcode_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Qrcode Configuration</label>
                <field id="is_active" translate="label comment" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" >
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                 <field id="size" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>size</label>
                    <comment>size of qrcode</comment>
                    <depends>
                       <field id="*/*/is_active">1</field>
                   </depends>
                 </field>
                </group>
        </section>
    </system>
</config>



