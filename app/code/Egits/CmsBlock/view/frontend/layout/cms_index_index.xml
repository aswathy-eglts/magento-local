<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <referenceContainer name="content">
        <block class="Magento\Cms\Block\Block" name="example-cms-block">
            <arguments>
                <argument name="block_id" xsi:type="string">example-cms-block</argument>
            </arguments>
        </block>
   
        <block class="Magento\Cms\Block\Block" name="company" after="-">
            <arguments>
              <argument name="block_id" xsi:type="string">company</argument>
            </arguments>
        </block>
    </referenceContainer>     
</page>
