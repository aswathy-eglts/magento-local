<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">uiexample_form.egits_employeeform_create_listing_data_source</item>
            <item name="deps" xsi:type="string">uiexample_form.egits_employeeform_create_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Form Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">uiexample_form</item>
        </item>
        <item name="spinner" xsi:type="string">general_information</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Egits\EmployeeForm\Block\Adminhtml\Edit\Back</item>
            <item name="reset" xsi:type="string">Egits\EmployeeForm\Block\Adminhtml\Edit\Reset</item>
            <item name="save" xsi:type="string">Egits\EmployeeForm\Block\Adminhtml\Edit\Save</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="egits_employeeform_create_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Egits\EmployeeForm\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">egits_employeeform_create_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">employee_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save" />
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">General Information</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="employee_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Employee Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee_name</item>
                    <item name="dataScope" xsi:type="string">employee_name</item>
                    <!-- <item name="validation" xsi:type="array"> -->
                        <!-- <item name="required-entry" xsi:type="boolean">true</item>
                       <item name="letters-with-basic-punc" xsi:type="boolean">true</item>
                       <item name="min_text_length" xsi:type="number">2</item>
                    </item> -->
                </item>
            </argument>
        </field>
        <field name="employe_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Employe Email</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employe_email</item>
                    <item name="dataScope" xsi:type="string">employe_email</item>
                    <!-- <item name="validation" xsi:type="array">
                      <item name="required-entry" xsi:type="boolean">true</item>
                      <item name="validate-email" xsi:type="boolean">true</item>
                    </item> -->
                </item>
            </argument>
        </field>
        <field name="employee_address">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Employe Address</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">employee_address</item>
                    <item name="dataScope" xsi:type="string">employee_address</item>
                    <!-- <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-alphanum-with-spaces" xsi:type="boolean">true</item>
                    </item> -->
                </item>
            </argument>
        </field>
    </fieldset>
</form>
