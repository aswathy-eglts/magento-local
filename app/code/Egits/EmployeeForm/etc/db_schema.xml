<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_table" resource="default" engine="innodb" comment="EMPLOYEE TABLE">
        <column xsi:type="smallint" name="employee_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="employee_name" nullable="false" length="25" comment="Name"/>
        <column xsi:type="varchar" name="employe_email" nullable="false" length="25" comment="Email"/>
        <column xsi:type="varchar" name="employee_address" nullable="false" length="255" comment="Address"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>
    </table>
</schema>