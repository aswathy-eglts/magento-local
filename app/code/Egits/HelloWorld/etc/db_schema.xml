<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="declarative_table" resource="default" engine="innodb" comment="declarative_table">
        <column xsi:type="smallint" name="id_column" identity="true" unsigned="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="int" name="severity"  unsigned="true" nullable="false" comment="Severity code"/>
        <column xsi:type="varchar" name="title"  nullable="false" length="255" comment="Title"/>
        <column xsi:type="timestamp" name="time_occurred"  comment="Time of event"/>
        <column xsi:type="timestamp" name="date_closed"  comment="Time of event"/>
        <column xsi:type="smallint" name="block_id" unsigned="false" nullable="false" identity="false"
                comment="Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="id_column"/>
       </constraint>
   </table>
   <table name="magento_table" resource="default" engine="innodb" comment="magento_table">
        <column xsi:type="smallint" name="id" identity="true" unsigned="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="int" name="Name"  unsigned="true" nullable="false" comment="Severity code"/>
        <column xsi:type="varchar" name="title"  nullable="false" length="255" comment="Title"/>
        <column xsi:type="timestamp" name="time_occurred"  comment="Time of event"/>
        <column xsi:type="timestamp" name="date_closed"  comment="Time of event"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="id"/>
       </constraint>
   </table>
</schema>       